{
  "id": null,
  "title": "Simple Working Dashboard",
  "tags": ["test", "working"],
  "timezone": "browser",
  "panels": [
    {
      "id": 1,
      "title": "Prometheus Targets Status",
      "type": "stat",
      "targets": [
        {
          "expr": "up",
          "legendFormat": "{{job}} - {{instance}}",
          "datasource": {
            "type": "prometheus"
          }
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "color": {
            "mode": "palette-classic"
          }
        }
      },
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0}
    },
    {
      "id": 2,
      "title": "Sample App HTTP Requests",
      "type": "stat",
      "targets": [
        {
          "expr": "sum(http_requests_total{job=\"sample-app\"})",
          "legendFormat": "Total Requests",
          "datasource": {
            "type": "prometheus"
          }
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "color": {
            "mode": "palette-classic"
          }
        }
      },
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0}
    },
    {
      "id": 3,
      "title": "Container CPU Usage",
      "type": "stat",
      "targets": [
        {
          "expr": "rate(container_cpu_usage_seconds_total[5m]) * 100",
          "legendFormat": "{{name}}",
          "datasource": {
            "type": "prometheus"
          }
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "color": {
            "mode": "palette-classic"
          }
        }
      },
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8}
    },
    {
      "id": 4,
      "title": "Sample App Logs",
      "type": "logs",
      "targets": [
        {
          "expr": "{job=\"sample-app\"}",
          "datasource": {
            "type": "loki"
          }
        }
      ],
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8}
    }
  ],
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "refresh": "5s"
}
